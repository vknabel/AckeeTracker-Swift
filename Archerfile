name: AckeeTracker
scripts:
  format: >-
    swift run --skip-build swift-format
    --mode format
    --configuration .swift-format
    --in-place
    --recursive
    Sources
    Tests
    Package.swift
  linux-main: swift test --generate-linuxmain
  docs: |
    if which jazzy >/dev/null; then
      jazzy --head "$(cat Scripts/docs-head.html)"
    else
      echo Skip: Jazzy not available
    fi
  setup:
    run: [bundle, komondor]
    scripts:
      komondor: swift run --skip-build --skip-update komondor install
      bundle: bundle install
